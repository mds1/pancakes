{
  "overrides": [
    {
      "files": "**/*.sol",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": ["**/*.js", "**/*.ts"],
      "options": {
        "bracketSpacing": true,
        "trailingComma": "es5",
        "tabWidth": 2,
        "printWidth": 100,
        "singleQuote": true,
        "semi": true
      }
    }
  ]
}
